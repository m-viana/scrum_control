<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_logo_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_profile_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/iv_profile_two"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/colorAccent"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewEditText"
            android:text="@string/tv_name_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/civ_profile"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_address_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewEditText"
            android:text="@string/tv_address_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
            android:textAlignment="center"
            android:textSize="12sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_email_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewEditText"
            android:text="@string/tv_email_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_address_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="12sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_control"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_margin="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorViewProfile"
                        android:padding="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_change_password"
                            style="@style/TextProfile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/tv_change_password"
                            android:drawableStart="@drawable/ic_change_password"
                            android:drawablePadding="22dp"/>

                        <View
                            android:id="@+id/view_change_password"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_change_password"
                            android:background="@color/colorWhite"
                            android:layout_margin="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_about"
                            style="@style/TextProfile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_change_password"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/tv_about"
                            android:drawableStart="@drawable/iv_about"
                            android:drawablePadding="23dp"
                            android:layout_marginTop="10dp"/>

                        <View
                            android:id="@+id/view_about"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_about"
                            android:background="@color/colorWhite"
                            android:layout_margin="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_privacy_policy"
                            style="@style/TextProfile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_about"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/tv_privacy_policy"
                            android:drawableStart="@drawable/ic_terms"
                            android:layout_marginTop="10dp"/>

                        <View
                            android:id="@+id/view_privacy_policy"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_privacy_policy"
                            android:background="@color/colorWhite"
                            android:layout_margin="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_terms_of_use"
                            style="@style/TextProfile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_privacy_policy"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/tv_terms_of_use"
                            android:drawableStart="@drawable/ic_terms"
                            android:layout_marginTop="10dp"/>

                        <View
                            android:id="@+id/view_terms_of_use"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_terms_of_use"
                            android:background="@color/colorWhite"
                            android:layout_margin="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_contact_profile"
                            style="@style/TextProfile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_terms_of_use"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/tv_contact_profile"
                            android:drawableStart="@drawable/ic_contact"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"/>

                        <View
                            android:id="@+id/view_contact"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_contact_profile"
                            android:background="@color/colorWhite"
                            android:layout_margin="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_exit"
                            style="@style/TextProfile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_contact"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/tv_exit"
                            android:drawableStart="@drawable/ic_exit"
                            android:drawablePadding="24dp"
                            android:layout_marginTop="10dp"/>

                        <View
                            android:id="@+id/view_exit"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_contact_profile"
                            android:background="@color/colorWhite"
                            android:layout_margin="5dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>