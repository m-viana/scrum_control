<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.VisitorsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_visitors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_visitors"
            style="@style/ToolBar"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_th"
            android:textAlignment="textEnd"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/tb_visitors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tb_visitors"
            app:layout_constraintTop_toTopOf="@+id/tb_visitors" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_tv_description_visitors"
            style="@style/TextViewEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_visitors" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_alert"
            style="@style/TextViewEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawableStart="@drawable/ic_alert"
            android:drawablePadding="12dp"
            android:text="@string/tv_alert"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_tv_description_visitors"
            app:layout_constraintStart_toStartOf="@+id/tv_tv_description_visitors"
            app:layout_constraintTop_toBottomOf="@+id/tv_tv_description_visitors" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_control"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_visitors">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_et_name_visitors"
                    style="@style/TextViewEditText"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/tv_et_name_visitors"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="@+id/til_name_visitors"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_icon_name_visitors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_name_editext"
                    app:layout_constraintBottom_toBottomOf="@+id/til_name_visitors"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/til_name_visitors" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name_visitors"
                    style="@style/TextInputLayoutTheme"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_icon_name_visitors"
                    app:layout_constraintTop_toBottomOf="@id/tv_et_name_visitors">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tiet_name_visitors"
                        style="@style/TextInputTextTheme"
                        android:layout_height="42dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/gradient_background"
                        android:inputType="textImeMultiLine|textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/til_name_visitors"
                    app:layout_constraintTop_toBottomOf="@+id/til_name_visitors"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_et_date_visitors"
                        style="@style/TextViewEditText"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tv_date_limited_visitors"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="@id/til_date_visitors"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_icon_date_visitors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_date_editext"
                        app:layout_constraintBottom_toBottomOf="@+id/til_date_visitors"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/til_date_visitors" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_date_visitors"
                        style="@style/TextInputLayoutTheme"
                        app:errorEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_icon_date_visitors"
                        app:layout_constraintTop_toBottomOf="@id/tv_et_date_visitors">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tiet_date_visitors"
                            style="@style/TextInputTextTheme"
                            android:layout_height="42dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/gradient_background"
                            android:inputType="textImeMultiLine|textEmailAddress" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cb_visitors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:fontFamily="@font/roboto"
                    android:text="@string/tv_checkbox"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_date"
                    android:layout_marginTop="20dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm_visitors"
                    style="@style/buttonCustom"
                    android:text="@string/btn_save_visitors"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cb_visitors" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>